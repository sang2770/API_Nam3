
@{
    ViewBag.Title = "ListCountry";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- main title -->
<div class="col-12">
    <div class="main__title">
        <h2>Quản lý Thông Tin Quốc Gia</h2>
    </div>
</div>
<div class="col-12">
    <div class="container">
        <table style="border:none;" >
            <tbody>
                <tr>
                    <td style="width:150px">Mã Quốc Gia: </td>
                    <td>
                        <input id="txtMQG" type="text" class="form-control" name="MaQG"
                               placeholder="Mã Quốc Gia" />
                    </td>
                </tr>
                <tr>
                    <td style="width:30px">Tên Quốc Gia: </td>
                    <td>
                        <input id="txtTQG" type="text" class="form-control" name="TenQG" placeholder="Tên Quốc Gia" />
                    </td>
                </tr>
                
                <tr>
                    <td>
                        
                    </td>
                    <td>
                        <button class="btn-primary update-button"
                                onclick="insertCountry()" style="margin:10px;border-radius:5px; padding:5px; margin-left:0px;">
                            Thêm mới
                        </button>
                        <button class="btn-primary update-button"
                                onclick="UpdateCountry()" style="margin: 10px; border-radius: 5px; padding: 5px; ">
                            Cập nhật
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="container-fluid">
        <div class="row">
            <!-- main title -->
            <div class="col-12">
                <div class="main__title">


                    <div class="main__title-wrap">

                        <!-- search -->
                        @using (Html.BeginForm("Index", "NhanVien", FormMethod.Get, new { @class = "main__title-form" }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="text" name="TenNhanVien" placeholder="Nhập tên tên Quốc Gia cần tìm">
                            <button type="submit">
                                <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="8.25998" cy="8.25995" r="7.48191" stroke="#2F80ED" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></circle><path d="M13.4637 13.8523L16.3971 16.778" stroke="#2F80ED" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path></svg>
                            </button>
                        }

                        <!-- end search -->
                    </div>
                </div>
            </div>
            <!-- end main title -->
            <!-- users -->
            <div class="col-12">
                <div class="main__table-wrap">
                    <table class="main__table">
                        <thead>
                            <tr>
                                <th>
                                    Mã Quốc Gia
                                </th>
                                <th>
                                    Tên Quốc Gia
                                </th>

                                <th>Tùy Chọn</th>
                            </tr>
                        </thead>

                        <tbody id="ListUser">
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- end users -->

        </div>
    </div>
</div>
<!-- end main content -->
<!-- modal delete -->
<!-- modal delete -->
<div id="Modellocation">

</div>

<form action="/Admin/NhanVien/Delete" id="DeleteForm" method="post">
    @Html.AntiForgeryToken()
</form>
@section scripts{
    <script>
        $('document').ready(loaddata());
        function loaddata() {


            var str1 = "";
            $.ajax({
                url: 'https://localhost:7053/api/Countrys',
                method: "GET",
                contentType: "json",
                dataType: "json",
                success: function (data) {
                    console.log("Success");

                    $.each(data, function (key, value) {
                        str1 += `<tr>
                                                <td>
                                                    <div class="main__table-text">
                                                       ${value.maquocgia}
                                                    </div>
                                                </td>

                                                <td>
                                                    <div class="main__table-text">
                                                       ${value.tenquocgia}
                                                    </div>
                                                </td>
                                               
                                                <td>
                                                    <div class="main__table-btns">
                                                        <a  onclick="EditCountry(${value.maquocgia})" class="main__table-btn main__table-btn--edit">
                                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M22,7.24a1,1,0,0,0-.29-.71L17.47,2.29A1,1,0,0,0,16.76,2a1,1,0,0,0-.71.29L13.22,5.12h0L2.29,16.05a1,1,0,0,0-.29.71V21a1,1,0,0,0,1,1H7.24A1,1,0,0,0,8,21.71L18.87,10.78h0L21.71,8a1.19,1.19,0,0,0,.22-.33,1,1,0,0,0,0-.24.7.7,0,0,0,0-.14ZM6.83,20H4V17.17l9.93-9.93,2.83,2.83ZM18.17,8.66,15.34,5.83l1.42-1.41,2.82,2.82Z" /></svg>
                                                        </a>
                                                    <span href="#modal-delete" style="cursor:pointer" onclick="ConfirmDelete(${value.maquocgia})" id="DeleteBtn" class="main__table-btn main__table-btn--delete open-modal">
                                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M10,18a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,10,18ZM20,6H16V5a3,3,0,0,0-3-3H11A3,3,0,0,0,8,5V6H4A1,1,0,0,0,4,8H5V19a3,3,0,0,0,3,3h8a3,3,0,0,0,3-3V8h1a1,1,0,0,0,0-2ZM10,5a1,1,0,0,1,1-1h2a1,1,0,0,1,1,1V6H10Zm7,14a1,1,0,0,1-1,1H8a1,1,0,0,1-1-1V8H17Zm-3-1a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,14,18Z" /></svg>
                                                        </span>

                                                        </div>
                                                    </td>

                                                </tr>`
                    })

                    $('#ListUser').html(str1);
                    $("#Modellocation").html(`<div id="modal-delete" class="zoom-anim-dialog modal modal1 mfp-hide">
                    <h6 class="modal__title">User delete</h6>
                    <p class="modal__text">Bạn có chắc chẵn muốn xóa Quốc Gia này không?</p>
                    <div class="modal__btns">
                        <button class="modal__btn modal__btn--apply" type="button">Delete</button>
                        <button class="modal__btn modal__btn--dismiss" data-dismiss="modal" type="button">Dismiss</button>
                    </div>
                </div>`);
                },
                error: function (err) {
                    console.log(err);
                }
            });
        }
        function ConfirmDelete(id) {

                console.log(id)
                $.ajax({
                    url: 'https://localhost:7053/api/Countrys/' + id,
                    method: "DELETE",
                    contentType: 'json',
                    dataType: 'json',
                    error: function (res) {
                        alert("xóa ko thành công");
                    },
                    success: function (res) {
                        alert("xóa thành công");
                        loaddata();
                        GetAllCustomers();
                    },
                    fail: function (res) { }
                });
        }

        function EditCountry(id) {
            $.ajax({
                   url: 'https://localhost:7053/api/Countrys/' + id,
                   method: "GET",
                   contentType: 'json',
                   dataType: 'json',
                   error: function (res) {
                       alert("Lỗi");
                   },
                success: function (data) {
                    
                    $("#txtMQG").val(data.maquocgia);
                    $("#txtTQG").val(data.tenquocgia);
                   },
                   fail: function (res) { }
               });
        }
        function UpdateCountry() {
           
            var formdata ={
                "maquocgia": $("#txtMQG").val(),
                "tenquocgia": $("#txtTQG").val(),
                "tbPhimQuocgia": []
            };
            $.ajax({
                url: 'https://localhost:7053/api/Countrys/' + $("#txtMQG").val(),
                method: 'PUT',
                contentType: 'application/json',
                data: JSON.stringify(formdata),
                dataType: 'json',
                error: function (response) {
                    alert("Sửa không thành công");
                },
                success: function (country) {
                    alert("Sửa thành công");
                   loaddata(); //Gọi đến hàm lấy dữ liệu lên bảng
                }
            });
        }
        function insertCountry() {
            var formdata = {
                "maquocgia": 0,
                "tenquocgia": $("#txtTQG").val(),
                "tbPhimQuocgia": []
            };
            $.ajax({
                url: 'https://localhost:7053/api/Countrys',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(formdata),
                dataType: 'json',
                error: function (response) {
                    alert("Thêm mới không thành công");
                },
                success: function (reponse) {
                    alert("Thêm mới thành công");
                    loaddata(); //Gọi đến hàm lấy dữ liệu lên bảng
                }
            });
        }

    </script>
}

