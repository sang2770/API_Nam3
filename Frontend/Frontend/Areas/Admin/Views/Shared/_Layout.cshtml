    <!-- end sidebar -->
    <!-- main content -->
    <main class="main">
        <div class="container-fluid">
            <div class="row">

                @RenderBody()
            </div>
        </div>
    </main>
    <!-- end main content -->
    <!-- JS -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/AdminJS")
    
    @RenderSection("scripts", required: false)
</body>
</html>
