                    </svg>
                </a>
                @*Điền Action ở đây*@
                <ul class="collapse sidebar__menu" id="collapseMenu6">
                    <li><a href=@Url.Action("Index", "Ghe")>Danh sách Quốc Gia </a></li>
                    <li><a href=@Url.Action("Create", "Ghe")>Thêm Quốc Gia</a></li>
                </ul>
            </li>
            <!-- end collapse -->
         
            <li class="sidebar__nav-item">
                <a class="sidebar__nav-link"
                   data-toggle="collapse"
                   href="#collapseMenu4"
                   role="button"
                   aria-expanded="false"
                   aria-controls="collapseMenu4">
