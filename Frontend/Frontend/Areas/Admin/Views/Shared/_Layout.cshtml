                    <span>Phim</span>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M17,9.17a1,1,0,0,0-1.41,0L12,12.71,8.46,9.17a1,1,0,0,0-1.41,0,1,1,0,0,0,0,1.42l4.24,4.24a1,1,0,0,0,1.42,0L17,10.59A1,1,0,0,0,17,9.17Z" />
                    </svg>
                </a>
                @*Điền Action ở đây*@
                <ul class="collapse sidebar__menu" id="collapseMenu2">
                    <li><a href=@Url.Action("Create", "Phim")>Thêm phim</a></li>
                    <li><a href=@Url.Action("Index" , "Phim")>Danh sách phim</a></li>
                    
                </ul>
            </li>

          
            <!-- end collapse -->
            <!-- collapse -->
            <li class="sidebar__nav-item">
                <a class="sidebar__nav-link"
                   data-toggle="collapse"
                   href="#collapseMenu6"
                   role="button"
                   aria-expanded="false"
                   aria-controls="collapseMenu6">
                    <i class="fa fa-globe" style="font-size:24px ;margin-right:15px"></i>

                    <span>Quốc gia</span>
