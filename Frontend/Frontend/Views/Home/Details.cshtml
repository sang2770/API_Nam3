@section scripts{
    <script>
    
        const url = "https://localhost:7053/api";
        let id = location.href.split("/");
        id = id[id.length - 1];
        if (isInterger(id)) {
            $.ajax({
                url: url + "/Movies/" +,
                headers: {
                    "Content-Type": "application/json"
                },
                method: "GET",
                success: function (data) {
                    let result = "";
                    data.forEach((item, index) => {
                        result += ""
                    })
                    $("#ListMovieByCategory").html(result);

                },
                error: function (err) {
                    console.log(err);
                }
            })
        } else {
            window.history.back()
        }
        
        function isInterger(value) {
         if (value.match(/^\d+$/)) {
            return true;
        } else {
            return false;
        }
        }
        </script>
