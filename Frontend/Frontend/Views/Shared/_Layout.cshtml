    @Scripts.Render("~/bundles/Options")
    <script>
        let UserName = localStorage.getItem("Name");
        if (!UserName) {
            window.location = "/Home/Login";
        } else {
            $("#Info-User").html(UserName);
        }
        $("#BtnLogout").click(function (e) {
            e.preventDefault()
            localStorage.clear();
            window.location = "/Home/Login";
        })
